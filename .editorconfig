# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = off

# Matches multiple files with brace expansion notation
# Set default charset
[*.{cpp,hpp,vert,frag}]
charset = utf-8
indent_style = tab
indent_size = 3
tab_width = 3
